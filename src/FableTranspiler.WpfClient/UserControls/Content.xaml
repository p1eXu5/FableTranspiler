<UserControl x:Class="FableTranspiler.WpfClient.UserControls.Content"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FableTranspiler.WpfClient.UserControls"
             xmlns:conv="clr-namespace:FableTranspiler.WpfClient.Converters"
             xmlns:prop="clr-namespace:FableTranspiler.WpfClient.AttachedProperties"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="1200">
    <UserControl.Resources>
        <conv:StatementListToFlowDocumentConverter x:Key="conv_StatementListToFlowDocumentConverter" />
        <materialDesign:BooleanToVisibilityConverter x:Key="conv_BoolToVis"/>
    </UserControl.Resources>
    <materialDesign:ColorZone Padding="16" VerticalAlignment="Stretch">
        <DockPanel LastChildFill="True">
            <local:ToolBar x:Name="m_ContentToggler" DockPanel.Dock="Top"/>

            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <RichTextBox Width="400"
                             Visibility="{Binding ElementName=m_ContentToggler, Path=ShowTsContent, Converter={StaticResource conv_BoolToVis}, Mode=OneWay}"
                             d:Visibility="Visible"
                             Margin="5"
                             AcceptsReturn="True"
                             IsDocumentEnabled="True"
                             IsReadOnly="true"
                             VerticalScrollBarVisibility="Auto"
                             SpellCheck.IsEnabled="True"
                             materialDesign:HintAssist.Hint="TS Content"
                             prop:RichTextBoxHelper.DtsDocument="{Binding SelectedDtsModule, Mode=OneWay}"
                             prop:RichTextBoxHelper.DocumentError="{Binding LastError, Mode=OneWay}"
                             />

                <RichTextBox Width="400"
                             Visibility="{Binding ElementName=m_ContentToggler, Path=ShowFelizContent, Converter={StaticResource conv_BoolToVis}, Mode=OneWay}"
                             d:Visibility="Visible"
                             Margin="5"
                             AcceptsReturn="True"
                             IsDocumentEnabled="True"
                             IsReadOnly="true"
                             VerticalScrollBarVisibility="Auto"
                             SpellCheck.IsEnabled="True"
                             materialDesign:HintAssist.Hint="Feliz Content"
                            prop:RichTextBoxHelper.DtsDocument="{Binding SelectedFsModule, Mode=OneWay}"
                            prop:RichTextBoxHelper.DocumentError="{Binding LastError, Mode=OneWay}"
                             />

                <RichTextBox Width="400"
                             Visibility="{Binding ElementName=m_ContentToggler, Path=ShowFableContent, Converter={StaticResource conv_BoolToVis}, FallbackValue=Visible, Mode=OneWay}"
                             d:Visibility="Visible"
                             Margin="5"
                             AcceptsReturn="True"
                             IsDocumentEnabled="True"
                             IsReadOnly="true"
                             VerticalScrollBarVisibility="Auto"
                             SpellCheck.IsEnabled="True"
                             materialDesign:HintAssist.Hint="Fable Content"
                            prop:RichTextBoxHelper.DtsDocument="{Binding SelectedFableModule, Mode=OneWay}"
                            prop:RichTextBoxHelper.DocumentError="{Binding LastError, Mode=OneWay}"
                             />
            </StackPanel>
        </DockPanel>
    </materialDesign:ColorZone>
</UserControl>
